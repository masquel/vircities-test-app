* 
	box-sizing border-box

body
	font-family 'Roboto', sans-serif

.container
	max-width 1200px
	margin 0 auto

.title
	text-align center
	margin 20px auto

.task
	margin 20px auto
	&__title
		text-align center
		font-weight bold
	&__text
		max-width 900px
		margin 20px auto
		background-color #f5f5f5
		color #000
		padding 15px
		white-space pre-wrap
		font-family 'Roboto', sans-serif
		font-size 13px

.vircities-search
	display table
	margin 20px auto
	width 100%
	&__input
		border 1px solid #eee
		background-color #fff
		color #000
		height 40px
		padding 10px
		width 100%
		appearance none
		&:focus
			outline none
			border-color #3498db
		&-wrapper
			display table-cell
			width 100%
	&__button
		display table-cell
		height 40px
		padding 10px 20px
		background-color #2ecc71
		border none
		color #fff
		&:hover
			cursor pointer
			background-color #27ae60
		
	&__result
		border 1px solid #eee
		&--hidden
			display none
		&-item
			padding 10px
			& + & 
				border-top 1px solid #eee
	&__message
		opacity 1
		transition opacity 1.5s
		margin 20px auto
		&--hidden
			opacity 0
			display none
		&-error
			padding 10px
			color #c0392b
			border 2px solid #c0392b
		&-success
			padding 10px
			color #2ecc71
			border 2px solid #2ecc71
		